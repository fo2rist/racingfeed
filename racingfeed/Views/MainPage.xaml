            </NavigationPage.Icon>
            <x:Arguments>
                <views:ItemsPage>
                    <x:Arguments>
                        <x:String>F1</x:String>
                    </x:Arguments>
                </views:ItemsPage>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="About">
            <NavigationPage.Icon>
