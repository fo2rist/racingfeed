                </views:ItemsPage>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="F1">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="tab_feed.png" />
